<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.luzfaltex.selkhound.client" android:versionCode="1" android:versionName="$(Version)" android:installLocation="internalOnly">
	<application android:allowBackup="true" android:supportsRtl="true" android:label="Selkhound Client"></application>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- For voice calls and audio messages -->
	<uses-permission android:name="android.permission.CAMERA" /> <!-- Used for video calls -->
	<uses-sdk android:minSdkVersion="28" android:targetSdkVersion="33" />
	<uses-feature android:name="android.hardware.Camera" android:required="false" />
</manifest>